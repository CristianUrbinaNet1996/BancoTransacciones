<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Mi Aplicación Bancaria</title>
    <!-- Dependencias Bootstrap y FontAwesome -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        body {
            background-color: #f7f9fc;
            color: #333;
            font-family: 'Arial', sans-serif;
        }

        .text-balance {
            color: #28a745;
            font-weight: bold;
        }   

        .text-debt {
            color: #dc3545;
            font-weight: bold;
        }

        .text-danger {
            color: #dc3545;
        }
        /* Estilos para el menú lateral */
        .sidebar {
            height: 100vh;
            width: 250px;
            position: fixed;
            top: 0;
            left: 0;
            background-color: #343a40;
            padding-top: 20px;
            transition: width 0.3s;
        }

            .sidebar.collapsed {
                width: 80px;
            }

            .sidebar a {
                padding: 15px;
                font-size: 18px;
                color: white;
                display: block;
                text-decoration: none;
                transition: all 0.3s;
                white-space: nowrap;
            }

            .sidebar.collapsed a {
                text-align: center;
                font-size: 0;
                padding: 15px 0;
            }

                .sidebar.collapsed a i {
                    font-size: 24px;
                }

            .sidebar a:hover {
                background-color: #007bff;
                color: white;
            }

        .main-content {
            margin-left: 260px;
            padding: 20px;
            transition: margin-left 0.3s;
        }

        .collapsed + .main-content {
            margin-left: 90px;
        }
        /* Botón de hamburguesa */
        .menu-toggle {
            background-color: #343a40;
            color: white;
            border: none;
            padding: 10px;
            cursor: pointer;
            position: absolute;
            top: 10px;
            left: 250px;
            transition: left 0.3s;
        }

        .collapsed + .menu-toggle {
            left: 80px;
        }
        /* Iconos */
        .fa {
            margin-right: 10px;
        }

        .sidebar.collapsed .fa {
            margin-right: 0;
        }

        .header-card {
            background-color: #007bff;
            color: white;
            padding: 20px;
            border-radius: 10px 10px 0 0;
        }
    </style>
</head>
<body>
    <!-- Menú lateral con iconos -->
    <div class="sidebar" id="sidebar">
        <a href="@Url.Action("AgregarTransaccion", "EstadoCuenta",new {Area="EstadoCuenta"})">
            <i class="fas fa-money-bill-wave"></i>
            <span>Agregar Trnasaccion</span>
        </a>
        <a href="@Url.Action("Index", "EstadoCuenta",new {Area="EstadoCuenta"})">
            <i class="fas fa-shopping-cart"></i>
            <span>Estado de cuenta</span>
        </a>
        <a href="@Url.Action("VerTransacciones", "Transacciones")">
            <i class="fas fa-list"></i>
            <span>Ver Transacciones</span>
        </a>
    </div>

    <!-- Botón de menú hamburguesa -->
    <button class="menu-toggle" id="menu-toggle">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Contenido principal -->
    <div class="main-content" id="main-content">
        @RenderBody() <!-- Aquí se incluirá el contenido de cada vista -->
    </div>

    <!-- Scripts -->
    <script>
        const sidebar = document.getElementById('sidebar');
        const toggleButton = document.getElementById('menu-toggle');
        const mainContent = document.getElementById('main-content');

        toggleButton.addEventListener('click', function () {
            sidebar.classList.toggle('collapsed');
            mainContent.classList.toggle('collapsed');
        });
    </script>
</body>
</html>